.contact-text-input, .contact-textarea
  padding: 4px 7px
  width: 100%
  outline: none
  border: solid 1px $color-accent-3
  border-radius: 5px
  background-color: $color-background
  color: $color-text
  font-size: 1.2rem
  -webkit-border-radius: 5px
  -moz-border-radius: 5px

  &:focus
    border: solid 1px $color-accent-1

.field-button
  border: none
  outline: none
  margin: 0
  padding: 0

.contact-button
  border: none
  border-radius: 5px
  background-color: $color-accent-1
  color: $color-text
  font-size: 1.2rem
  width: 20%
  margin-left: 10px
